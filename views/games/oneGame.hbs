<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="shortcut icon" href="https://www.kindpng.com/picc/m/418-4184335_transparent-playstation-clipart-drawn-controller-hd-png-download.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>

<div class="container">
  <div class="row  ">
      <h1 class="d-flex justify-content-center">{{gameDetail.title}}</h1>
  </div>


  <div class="row">
   <div id="myCarousel" class="carousel slide col-sm-7" data-ride="carousel">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {{#each gameDetail.screenshots}}
      <div class="carousel-item {{#unless @index}} active {{/unless}}">
        <img src="{{this.image}}" class="d-block w-100" alt="...">
      </div>
      {{/each }}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

    
  </div>

          <div class="col-sm-2"> 

      <h4>Genre:</h4>
      <p> {{gameDetail.genre}}</p>
        <h4>Publisher:</h4>
      <p>{{gameDetail.publisher}}</p>
      <h4>Developer:</h4>
        <p>{{gameDetail.developer}}</p>
      <h4>Release Date:</h4>
        <p>{{gameDetail.release_date}}</p>

          </div>

          <div class="col-sm-2"> 
      <h4>Minimum System Requirements:</h4>
      <ul class="list-unstyled">
        <li>OS: {{gameDetail.minimum_system_requirements.os}}</li>
        <li>Processor: {{gameDetail.minimum_system_requirements.processor}}</li>
        <li>Memory: {{gameDetail.minimum_system_requirements.memory}}</li>
        <li>Graphics: {{gameDetail.minimum_system_requirements.graphics}}</li>
        <li>Storage: {{gameDetail.minimum_system_requirements.storage}}</li>
      </ul>

    </div>
  </div>
  
</div>

<p class="container text-center">

  <button class="btn btn-dark " type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"  aria-expanded="false" aria-controls="collapseExample">
    Game description:
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body" style="margin-left: 5%; margin-right: 5%; margin-bottom: 3%; padding-bottom: 0px">
  <p>{{gameDetail.description}}</p><br>
  </div>
</div>


{{#if gameDetail.game_url}}
  <h3 class="text-center "><a class="btn btn-dark" href="{{gameDetail.game_url}} ">Click to play for free</a></h3><br>
{{/if}}


<h1 class="container ">Reviews</h1>
  {{#each dbGame.reviews}}
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
              
                <div class="comment mt-4 text-justify float-left">
                  <h3><img src="{{author.profilePic}}" alt="" class="rounded-circle" width="40" height="40"> {{author.username}} </h3>
                </div>

                    <h4>{{title}}</h4> <span>{{createdAt}}</span> <br>
                    <p class="reviewDescription">{{description}}</p>                    
                    
                  </div>
            </div>
            <div>
             <div class="text-center">
      <br>
     <a  class="btn btn-dark " style="margin-bottom: 15px;" href="/reviews/{{id}}/details/">See Review Details!</a>
   </div>
            
        </div>
    </div>
  {{/each}}
</section>
    <div class="text-center">
      <br>
     <a  class="btn btn-dark " style="margin-bottom: 15px;" href="/games/{{gameDetail.id}}/details/create-review">Make your Review!</a>
   </div>
   



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>